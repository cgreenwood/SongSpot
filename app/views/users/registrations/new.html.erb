<% provide(:title, 'Signup') %>
<div class='container'>
  <div class='center jumbotron dark'>
    <h1>Sign up</h1>
  </div>
  <div class='center jumbotron dark'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <p><%= f.label :name %></p>
        <%= f.text_field :name, class: 'form-control grey-text-area', autofocus: true%>
      </div>
      <div class="field">
        <p><%= f.label :email %></p>
        <%= f.email_field :email, class: 'form-control grey-text-area'%>
      </div>
      <div class="field">
        <p><%= f.label :password %></p>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control grey-text-area' %>
      </div>
      <div class="field">
        <p><%= f.label :password_confirmation %></p>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control grey-text-area' %>
      </div>
      <%= f.submit "Sign up", class: 'btn btn-primary green-btn' %>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
