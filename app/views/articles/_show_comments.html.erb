<div class ='center jumbotron dark'>
  <h2> Comments </h2>
</div>
<div class='center jumbotron dark'>
  <% @article.comments.each do |comment| %>
    <p><strong><%= comment.user.name %></strong></p>
    <p><%= comment.body %></p>
    <% if current_user && current_user.admin? %>
      <%= button_to 'X', article_comment_path(comment.article, comment),
                         { method: :delete,
                           class: 'btn btn-primary green-btn pull-right',
                           data: {confirm: 'Are you sure you want to delete your comment?'}}%>
    <% end %>
    <div>
      <small>Created at <%= comment.created_at %></small>
    </div>
    <hr>
  <% end %>
</div>
