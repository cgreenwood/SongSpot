<div class='container'>
  <div class='center jumbotron dark'>
    <h1><strong>Title: </strong><%= @article.title %></h1>
  </div>
  <div class='center jumbotron dark'>
    <p><strong>Contents:</strong><br><%= @article.text %></p>
    <small>Created by <%= @article.user.name %> at <%= @article.created_at %></small>
    <% if current_user && current_user.admin? %>
      <%= button_to 'Modify', edit_article_path(@article), {method: :get, class: 'btn btn-primary green-btn'} %>
      <%= button_to 'Delete', article_path(@article), { method: :delete,
                       class: 'btn btn-primary green-btn',
                       data: {confirm: 'Are you sure you want to delete this article?'}} %>
    <% end %>
  </div>
