<% if current_user && current_user.admin? %>
<% provide(:title, 'Article - New') %>
<h1>New Article</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :article, url: articles_path do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title%>
    </div>

    <div class="field">
      <%= f.label :text %><br />
      <%= f.text_area :text%>
    </div>


    <%= f.submit "Create", class: 'btn btn-primary' %>
    <% end %>


  </div>
</div>
<% end %>
