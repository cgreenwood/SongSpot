
<p>
  <strong>Title:</strong>
  <%= @bug.title %>
  <strong>Bug Type:</strong>
  <%= @bug.bug_type %>
</p>
<p>
  <strong>Bug Status:</strong>
  <marquee direction="right" class="<%= @bug.bug_status %>"><%= @bug.bug_status %></marquee>
</p>

  <strong>Description:</strong>
  <%= @bug.content %>
</p>
<p>
  <marquee class="<%= @bug.bug_status %>"><%= @bug.bug_status %></marquee>
</p>
<small>Created by <%= @bug.user.name %> at <%= @bug.created_at %>
</small>
<% if current_user && current_user.admin? %>
<button type="button" class="btn btn-primary pull-right">
  <%= link_to 'Modify', edit_bug_path(@bug) %>
</button>
<button type="button" class="btn btn-primary pull-right">
  <%= link_to 'Delete', bug_path(@bug),
      method: :delete,
      data: { confirm: 'Are you sure you want
                        to delete this article?' } %>
                      </button>
                        <% end %>
                        <marquee class="<%= @bug.bug_status %>" direction="down" width="1000" height="100" behavior="alternate" style="border:solid">
  <marquee behavior="alternate">
    <%= @bug.bug_status %>
  </marquee>
</marquee>
