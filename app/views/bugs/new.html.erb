<% if current_user%>
<% provide(:title, 'Bug - New') %>
<h1>Report a bug</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :bug, url: bugs_path do |f| %>

    <% if @bug.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@bug.errors.count, "error") %> prohibited
            this bug from being saved:
          </h2>
          <ul>
            <% @bug.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title%>
    </div>

    <div class="field">
      <%= f.label :type %><br />
      <p>
      <%= f.select(:bug_type, ["Playlist creation","User registration","Site navigation",
                           "Report a bug"])%>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content%>
    </div>


    <%= f.submit "Create", class: 'btn btn-primary' %>
    <% end %>


  </div>
</div>
<% end %>
